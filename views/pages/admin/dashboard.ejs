<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | HLOVF</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body, html {
      height: 100%;
      margin: 0;
      overflow-x: hidden;
    }

    .main-content {
      padding: 20px;
      background-color: #f8f9fa;
      min-height: 100vh;
      overflow-y: auto;
    }

    .card:hover {
      transform: scale(1.05);
    }

    .card {
      transition: transform 0.3s;
    }

    table th, table td {
      vertical-align: middle;
      text-align: center;
    }

    .offcanvas {
      background-color: #1b479e;
      color: white;
    }

    .offcanvas a {
      color: white;
      padding: 10px 15px;
      display: block;
      text-decoration: none;
    }

    .offcanvas a:hover,
    .offcanvas a.active {
      background-color: #fb8127;
      color: white;
    }

    /* Dark Mode Styles */
    .dark-mode {
      background-color: #121212 !important;
      color: #e0e0e0;
    }

    .dark-mode .main-content,
    .dark-mode .offcanvas,
    .dark-mode .navbar,
    .dark-mode .card,
    .dark-mode .table {
      background-color: #1e1e1e !important;
      color: #fff;
    }

    .dark-mode .table th,
    .dark-mode .table td {
      color: #e0e0e0;
    }

    .dark-mode .table-dark {
      background-color: #aeaeae !important;
    }

    .dark-mode .offcanvas a {
      color: #e0e0e0;
    }

    .dark-mode .offcanvas a:hover,
    .dark-mode .offcanvas a.active {
      background-color: #fb8127;
      color: white;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-3 sticky-top">
  <div class="container-fluid">
    <button class="btn btn-primary me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
      <i class="bi bi-list"></i>
    </button>
    <a class="navbar-brand fw-bold" href="#">HLOVF Admin</a>
    <ul class="navbar-nav ms-auto d-flex align-items-center">
      <li class="nav-item me-3">
        <a href="/" class="nav-link">Go to Site</a>
      </li>
      <li class="nav-item">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="darkModeToggle">
          <label class="form-check-label" for="darkModeToggle">Dark Mode</label>
        </div>
      </li>
    </ul>
  </div>
</nav>

<!-- Offcanvas Sidebar -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">Admin Panel</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body p-0">
    <a href="/admin/dashboard" class="active"><i class="bi bi-speedometer2"></i> Dashboard</a>
    <a href="/admin/create-post"><i class="bi bi-pencil-square"></i> Create Post</a>
    <a href="/admin/manage-posts"><i class="bi bi-card-list"></i> Manage Posts</a>
    <a href="/" target="_blank"><i class="bi bi-house-door"></i> View Website</a>
    <a href="/admin/logout" class="text-danger"><i class="bi bi-box-arrow-right"></i> Logout</a>
  </div>
</div>

<!-- Main Content -->
<div class="main-content">
  <div class="container-fluid">
    <h3 class="mb-4">Welcome, Admin</h3>

    <!-- Dashboard Cards -->
    <div class="row g-4">
      <div class="col-md-3">
        <div class="card text-white bg-primary shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Posts</h5>
            <p class="card-text"><%= totalPosts %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-info shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Volunteers</h5>
            <p class="card-text"><%= totalVolunteers %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white" style="background-color: #1b479e;">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-cash-coin"></i> Total Donations</h5>
            <p class="card-text"><%= totalDonations %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white" style="background-color: #fb8127;">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-wallet2"></i> Total Amount Donated</h5>
            <p class="card-text">₦<%= totalAmountDonated.toLocaleString() %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Donations Table -->
    <div class="row mt-5">
      <div class="col">
        <h4>Recent Donations</h4>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover shadow-sm">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Donor Name</th>
                <th>Email</th>
                <th>Amount (₦)</th>
              </tr>
            </thead>
            <tbody>
              <% if (donations && donations.length > 0) { %>
                <% donations.forEach((donation, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= donation.name %></td>
                    <td><%= donation.email %></td>
                    <td>₦<%= donation.amount.toLocaleString() %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">No donations yet</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Newsletter Subscribers -->
    <div class="row mt-5">
      <div class="col">
        <h4>Newsletter Subscribers</h4>
        <a href="/admin/subscribers/download" class="btn btn-sm btn-danger mb-3">Download as PDF</a>
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Email</th>
                <th>Date Subscribed</th>
              </tr>
            </thead>
            <tbody>
              <% if (subscribers && subscribers.length > 0) { %>
                <% subscribers.forEach((sub, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= sub.email %></td>
                    <td><%= sub.subscribedAt.toDateString() %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3">No subscribers found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="row mt-5">
      <div class="col">
        <a href="/admin/create-post" class="btn btn-outline-primary me-2"><i class="bi bi-plus-circle"></i> New Post</a>
        <a href="/admin/manage-posts" class="btn btn-outline-secondary me-2"><i class="bi bi-card-checklist"></i> Manage Posts</a>
        <a href="/admin/volunteers" class="btn btn-outline-info me-2"><i class="bi bi-person-check"></i> Manage Volunteers</a>
        <a href="/admin/contacts" class="btn btn-outline-primary"><i class="bi bi-contact"></i> Manage Contact Messages</a>
      </div>
    </div>

  </div>
</div>

<!-- Bootstrap & Dark Mode Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  const toggle = document.getElementById('darkModeToggle');
  const body = document.body;

  // Load saved dark mode preference
  if (localStorage.getItem('hlovf-dark-mode') === 'enabled') {
    body.classList.add('dark-mode');
    toggle.checked = true;
  }

  toggle.addEventListener('change', () => {
    if (toggle.checked) {
      body.classList.add('dark-mode');
      localStorage.setItem('hlovf-dark-mode', 'enabled');
    } else {
      body.classList.remove('dark-mode');
      localStorage.setItem('hlovf-dark-mode', 'disabled');
    }
  });
</script>
</body>
</html>
